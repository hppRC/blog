{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "public", ".cache"],
}
